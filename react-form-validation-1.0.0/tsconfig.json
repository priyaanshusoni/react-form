{
  "compilerOptions": {
    "baseUrl": "./src",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES5",
    "outDir": "./dist",
    "lib": ["ESNext", "ES6", "DOM"],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src"]
}
